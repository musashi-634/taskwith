<div class="container">
  <h1 class="mt-5">タスク詳細</h1>
  <div class="d-flex justify-content-end gap-2 mb-3">
    <%= link_to "編集", edit_task_path(@task), class: 'btn btn-primary' %>
    <%= button_to '削除', task_path(@task), method: :delete, class: 'btn btn-outline-secondary', data: { turbo_confirm: 'タスクを削除します。よろしいですか？' } %>
  </div>
  <div class="information border rounded mb-5 p-3 bg-white">
    <div class="row border-bottom mx-0 p-3">
      <div class="col-12 col-md-3 mb-2 mb-md-0 fw-bold">
        <%= t('activerecord.attributes.task.name') %>
      </div>
      <div class="col-12 col-md-9">
        <%= @task.name %>
      </div>
    </div>
    <div class="row border-bottom mx-0 p-3">
      <div class="col-12 col-md-3 mb-2 mb-md-0 fw-bold">
        <%= t('activerecord.attributes.task.start_at') %>
      </div>
      <div class="col-12 col-md-9">
        <%= @task.start_at&.to_fs(:date) %>
      </div>
    </div>
    <div class="row border-bottom mx-0 p-3">
      <div class="col-12 col-md-3 mb-2 mb-md-0 fw-bold">
        <%= t('activerecord.attributes.task.end_at') %>
      </div>
      <div class="col-12 col-md-9">
        <%= @task.end_at&.to_fs(:date) %>
      </div>
    </div>
    <div class="row border-bottom mx-0 p-3">
      <div class="col-12 col-md-3 mb-2 mb-md-0 fw-bold">
        <%= t('activerecord.attributes.task.description') %>
      </div>
      <div class="col-12 col-md-9">
        <%= @task.description %>
      </div>
    </div>
    <div class="section-users row border-bottom mx-0 p-3">
      <div class="col-12 col-md-3 mb-2 mb-md-0 fw-bold">
        <%= t('activerecord.attributes.task.users') %>
      </div>
      <div class="col-12 col-md-9">
        <% @task_staffs.each do |user| %>
          <div class="mb-1"><%= user.name %></div>
        <% end %>
      </div>
    </div>
    <div class="row align-items-center mx-0 p-3">
      <div class="col-12 col-md-3 mb-2 mb-md-0 fw-bold">
        <%= t('activerecord.attributes.task.is_done') %>
      </div>
      <div class="col-12 col-md-9">
        <% if @task.is_done? %>
          <i class="bi bi-check2-square text-success fs-5"></i>
        <% end %>
      </div>
    </div>
  </div>
</div>
