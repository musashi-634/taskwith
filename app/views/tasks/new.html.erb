<div class="container">
  <h1 class="my-5">新規タスク作成</h1>
  <%= form_with model: [@project, @task], class: "pb-5" do |f| %>
    <div class="row g-3 mb-4">
      <div class="col-12">
        <%= f.label :name, class: "form-label" do %>
          <%= t('activerecord.attributes.task.name') %>
          <span class="badge bg-danger">必須</span>
        <% end %>
        <%= f.text_field :name, class: "form-control", autofocus: true %>
        <%= render "shared/error_messages_for_attribute", object: @task, attribute: :name %>
      </div>
      <div class="col-6 col-md-3">
        <%= f.label :start_at, class: "form-label" %>
        <%= f.date_field :start_at, class: "form-control" %>
        <%= render "shared/error_messages_for_attribute", object: @task, attribute: :start_at %>
      </div>
      <div class="col-6 col-md-3">
        <%= f.label :end_at, class: "form-label" %>
        <%= f.date_field :end_at, class: "form-control" %>
        <%= render "shared/error_messages_for_attribute", object: @task, attribute: :end_at %>
      </div>
      <div class="col-12">
        <%= f.label :description, class: "form-label" %>
        <%= f.text_area :description, class: "form-control", rows: "5" %>
        <%= render "shared/error_messages_for_attribute", object: @task, attribute: :description %>
      </div>
      <div class="col-12">
        <%= f.label :user_ids, t('activerecord.attributes.task.users'), class: "form-label" %>
        <%= f.collection_select :user_ids, @project_members, :id, :name, {},
            { multiple: true, placeholder: "#{t('activerecord.attributes.task.users')}を選択", data: { controller: "select" } } %>
        <%= render "shared/error_messages_for_attribute", object: @task, attribute: :user_ids %>
      </div>
    </div>
    <div class="row">
      <div class="col-6">
        <%= f.submit "作成", class: "btn btn-primary w-100" %>
      </div>
      <div class="col-6">
        <%= link_to "キャンセル", 'javascript:history.back()', class: "btn btn-outline-secondary w-100" %>
      </div>
    </div>
  <% end %>
</div>
