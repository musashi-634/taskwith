<div class="container">
  <h1 class="my-5">組織メンバー編集</h1>
  <div class="information border rounded mb-5 p-3 bg-white">
    <div class="row border-bottom mx-0 p-3">
      <div class="col-12 col-md-3 mb-2 mb-md-0 fw-bold">
        <%= t('activerecord.attributes.user.name') %>
      </div>
      <div class="col-12 col-md-9">
        <%= @member.name %>
      </div>
    </div>
    <div class="row border-bottom mx-0 p-3">
      <div class="col-12 col-md-3 mb-2 mb-md-0 fw-bold">
        <%= t('activerecord.attributes.user.email') %>
      </div>
      <div class="col-12 col-md-9">
        <%= @member.email %>
      </div>
    </div>
    <div class="row align-items-center mx-0 p-3">
      <div class="col-12 col-md-3 mb-2 mb-md-0 fw-bold">
        <%= t('activerecord.attributes.user.is_admin') %>
      </div>
      <div class="col-12 col-md-9 d-flex align-items-center gap-3">
        <%= form_with model: @member, url: organizations_member_path, class: 'd-flex align-items-center gap-3' do |f| %>
          <div class="form-check">
            <%= f.check_box :is_admin, class: "form-check-input" %>
            <%= f.label :is_admin, '管理者', class: "form-check-label" %>
            <%= render "shared/error_messages_for_attribute", object: @member, attribute: :is_admin %>
          </div>
          <div>
            <%= f.submit "更新", class: "btn btn-primary btn-sm" %>
            <%= link_to "キャンセル", 'javascript:history.back()', class: "btn btn-outline-secondary btn-sm" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
