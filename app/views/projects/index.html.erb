<div class="container">
  <h1 class="mt-5">プロジェクト一覧</h1>
  <div class="d-flex justify-content-end">
    <%= link_to "New", new_project_path, class: "btn btn-primary me-2" %>
    <%= link_to "アーカイブ済み", projects_archived_index_path, class: "btn btn-outline-secondary" %>
  </div>
  <div><%= @projects.length %>件のプロジェクトを表示中</div>
  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3 py-3">
    <% @projects.each do |project| %>
      <div class="col">
        <div class="card h-100 shadow-sm <%= "text-black-50" if project.is_done %>">
          <div class="card-body d-flex flex-column">
            <h5 class="card-title mb-3"><%= project.name %></h5>
            <p class="card-text mb-2">メンバー：
              <% project.users.each_with_index do |user, i| %>
                <%= "、" if !i.zero? %>
                <%= user.name %>
              <% end %>
            </p>
            <p class="card-text text-black-50 text-truncate"><%= project.description %></p>
            <div class="btn-group mt-auto align-self-start">
              <%= link_to "詳細", "#", class: "btn btn-sm btn-outline-secondary" %>
              <%= link_to "タスク", project_tasks_path(project), class: "btn btn-sm btn-outline-secondary" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
