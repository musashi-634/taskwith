<div class="container projects-index">
  <h1 class="mt-5">プロジェクト</h1>
  <div class="d-flex justify-content-end">
    <%= link_to "New", new_project_path, class: "btn btn-primary me-2" %>
    <%= link_to projects_archives_path,
        class: "btn btn-outline-secondary",
        data: { bs_toggle: "tooltip", bs_placement: "bottom" },
        title: "アーカイブ" do %>
      <i class="bi bi-archive"></i>
    <% end %>
  </div>
  <div><%= @projects.length %>件のプロジェクトを表示中</div>
  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3 py-3">
    <% @projects.each do |project| %>
      <div class="col">
        <div class="card h-100 shadow-sm <%= "done-project" if project.is_done %>">
          <div class="card-body d-flex flex-column">
            <h5 class="card-title mt-1 mb-4 fw-bold"><%= project.name %></h5>
            <p class="card-text mb-2"><%= t('activerecord.attributes.project.users') %>：
              <% project.users.each_with_index do |user, i| %>
                <%= "、" if !i.zero? %>
                <%= user.name %>
              <% end %>
            </p>
            <p class="card-text text-done text-truncate"><%= project.description %></p>
            <div class="d-flex justify-content-between align-items-center mt-auto">
              <div class="btn-group">
                <%= link_to "詳細", project_path(project), class: "btn btn-sm btn-outline-secondary" %>
                <%= link_to "タスク", project_tasks_path(project), class: "btn btn-sm btn-outline-secondary" %>
              </div>
              <i class="bi bi-check2-square text-success fs-4 d-none"></i>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
