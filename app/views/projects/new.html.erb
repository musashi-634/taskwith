<div class="container">
  <h1 class="mt-5">新規プロジェクト作成</h1>
  <%= form_with model: @project do |f| %>
    <%= render "shared/error_messages", object: @project %>
    <%= f.hidden_field :user_ids, multiple: true, value: current_user.id %>
    <div>
      <%= f.label :name %>
      <span class="badge bg-danger">必須</span><br>
      <%= f.text_field :name, autofocus: true %>
    </div>
    <div>
      <%= f.label :description %><br>
      <%= f.text_area :description %>
    </div>
    <div>
      <%= f.submit "作成" %>
    </div>
  <% end %>
  <%= link_to "戻る", 'javascript:history.back()' %>
</div>
