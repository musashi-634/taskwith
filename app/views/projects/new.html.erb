<div class="container">
  <h1 class="my-5">新規プロジェクト作成</h1>
  <%= form_with model: @project, class: "pb-5" do |f| %>
    <div class="row g-3 mb-4">
      <%= f.hidden_field :user_ids, multiple: true, value: current_user.id %>
      <div class="col-12">
        <%= f.label :name, class: "form-label" do %>
          <%= t('activerecord.attributes.project.name') %>
          <span class="badge bg-danger">必須</span>
        <% end %>
        <%= f.text_field :name, class: "form-control", autofocus: true %>
        <%= render "shared/error_messages_for_attribute", object: @project, attribute: :name %>
      </div>
      <div class="col-12">
        <%= f.label :description, class: "form-label" %>
        <%= f.text_area :description, class: "form-control", rows: "5" %>
        <%= render "shared/error_messages_for_attribute", object: @project, attribute: :description %>
      </div>
    </div>
    <div class="row">
      <div class="col-6">
        <%= f.submit "作成", class: "btn btn-primary w-100" %>
      </div>
      <div class="col-6">
        <%= link_to "キャンセル", 'javascript:history.back()', class: "btn btn-outline-secondary w-100" %>
      </div>
    </div>
  <% end %>
</div>
