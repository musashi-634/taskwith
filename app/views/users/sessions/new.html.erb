<div class="container">
  <h1 class="my-5">
    <%= t('.sign_in') %>
  </h1>
  <%= form_with model: resource, url: session_path(resource_name), class: "pb-3" do |f| %>
    <div class="row g-3 mb-4">
      <div class="col-12">
        <%= f.label :email, class: "form-label" do %>
          <%= t("activerecord.attributes.#{resource.class.to_s.downcase}.email") %>
          <span class="badge bg-danger">必須</span>
        <% end %>
        <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
        <%= render "shared/error_messages_for_attribute", object: resource, attribute: :email %>
      </div>
      <div class="col-12">
        <%= f.label :password, class: "form-label" do %>
          <%= t("activerecord.attributes.#{resource.class.to_s.downcase}.password") %>
          <span class="badge bg-danger">必須</span>
        <% end %>
        <%= f.password_field :password, class: "form-control", autocomplete: "current-password" %>
        <%= render "shared/error_messages_for_attribute", object: resource, attribute: :password %>
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="col-12">
          <div class="form-check">
            <%= f.check_box :remember_me, class: "form-check-input" %>
            <%= f.label :remember_me, class: "form-check-label" %>
            <%= render "shared/error_messages_for_attribute", object: resource, attribute: :remember_me %>
          </div>
        </div>
      <% end %>
    </div>
    <div class="row">
      <div class="col">
        <%= f.submit t('.sign_in'), class: "btn btn-primary w-100" %>
      </div>
    </div>
  <% end %>
  <%= link_to t('users.shared.links.forgot_your_password'), new_user_password_path, class: "mb-5" %>
</div>
