<h2><%= t "users.invitations.edit.header" %></h2>

<%= form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>
  <%= f.hidden_field :invitation_token, readonly: true %>
  <% if resource.invited_by.present? %>
    <%= f.hidden_field :organization_id, readonly: true, value: resource.invited_by.organization.id %>
  <% end %>

  <% if f.object.class.require_password_on_accepting %>
    <div class="field">
      <%= f.label :name %>
      <span class="badge bg-danger">必須</span><br>
      <%= f.text_field :name %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <span class="badge bg-danger">必須</span><br>
      <%= f.password_field :password %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %>
      <span class="badge bg-danger">必須</span><br>
      <%= f.password_field :password_confirmation %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit t("users.invitations.edit.submit_button") %>
  </div>
<% end %>
