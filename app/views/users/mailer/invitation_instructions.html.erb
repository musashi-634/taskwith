<p><%= t("users.mailer.invitation_instructions.hello", email: @resource.email) %></p>

<p><%= t("users.mailer.invitation_instructions.someone_invited_you", url: root_url) %></p>

<p><%= link_to t("users.mailer.invitation_instructions.accept"), accept_invitation_url(@resource, invitation_token: @token) %></p>

<% if @resource.invitation_due_at %>
  <p><%= t("users.mailer.invitation_instructions.accept_until", due_date: l(@resource.invitation_due_at, format: :'users.mailer.invitation_instructions.accept_until_format')) %></p>
<% end %>

<p><%= t("users.mailer.invitation_instructions.ignore") %></p>
