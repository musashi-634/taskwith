<%= t("users.mailer.invitation_instructions.hello", email: @resource.email) %>

<%= t("users.mailer.invitation_instructions.someone_invited_you", url: root_url) %>

<%= accept_invitation_url(@resource, invitation_token: @token) %>

<% if @resource.invitation_due_at %>
  <%= t("users.mailer.invitation_instructions.accept_until", due_date: l(@resource.invitation_due_at, format: :'users.mailer.invitation_instructions.accept_until_format')) %>
<% end %>

<%= t("users.mailer.invitation_instructions.ignore") %>
