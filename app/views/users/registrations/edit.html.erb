<div class="container">
  <h1 class="my-5">
    <%= t('.title') %>
  </h1>
  <%= form_with model: resource, url: registration_path(resource_name), class: "pb-5" do |f| %>
    <div class="row g-3 mb-4">
      <div class="col-12">
        <%= f.label :name, class: "form-label" do %>
          <%= t("activerecord.attributes.#{resource.class.to_s.downcase}.name") %>
          <span class="badge bg-danger">必須</span>
        <% end %>
        <%= f.text_field :name, class: "form-control", autofocus: true, autocomplete: "name" %>
        <%= render "shared/error_messages_for_attribute", object: resource, attribute: :name %>
      </div>
      <div class="col-12">
        <%= f.label :email, class: "form-label" do %>
          <%= t("activerecord.attributes.#{resource.class.to_s.downcase}.email") %>
          <span class="badge bg-danger">必須</span>
        <% end %>
        <%= f.email_field :email, class: "form-control", autocomplete: "email" %>
        <%= render "shared/error_messages_for_attribute", object: resource, attribute: :email %>
      </div>
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div><%= t('.currently_waiting_confirmation_for_email', email: resource.unconfirmed_email) %></div>
      <% end %>
      <div class="col-12">
        <%= f.label :password, class: "form-label" do %>
          <%= t("activerecord.attributes.#{resource.class.to_s.downcase}.password") %>
          <br><i class="text-secondary"><%= t('.leave_blank_if_you_don_t_want_to_change_it') %></i>
          <% if @minimum_password_length %>
            <br>
            <em class="text-secondary">
              <%= t('users.shared.minimum_password_length', count: @minimum_password_length) %>
            </em>
          <% end %>
        <% end %>
        <%= f.password_field :password, class: "form-control", autocomplete: "new-password" %>
        <%= render "shared/error_messages_for_attribute", object: resource, attribute: :password %>
      </div>
      <div class="col-12">
        <%= f.label :password_confirmation, class: "form-label" %>
        <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %>
        <%= render "shared/error_messages_for_attribute", object: resource, attribute: :password_confirmation %>
      </div>
      <div class="col-12">
        <%= f.label :current_password, class: "form-label" do %>
          <%= t("activerecord.attributes.#{resource.class.to_s.downcase}.current_password") %>
          <span class="badge bg-danger">必須</span>
        <% end %>
        <%= f.password_field :current_password, class: "form-control", autocomplete: "current-password" %>
        <%= render "shared/error_messages_for_attribute", object: resource, attribute: :current_password %>
      </div>
    </div>
    <div class="row">
      <div class="col-6">
        <%= f.submit t('.update'), class: "btn btn-primary w-100" %>
      </div>
      <div class="col-6">
        <%= link_to "キャンセル", 'javascript:history.back()', class: "btn btn-outline-secondary w-100" %>
      </div>
    </div>
  <% end %>
</div>
