<div class="container">
  <h1 class="my-5">
    <%= t('.forgot_your_password') %>
  </h1>
  <p>ご入力いただいたメールアドレスに、パスワード再設定メールを送信します。</p>
  <%= form_with model: resource, url: password_path(resource_name), class: "pb-5" do |f| %>
    <div class="row g-3 mb-4">
      <div class="col-12">
        <%= f.label :email, class: "form-label" do %>
          <%= t("activerecord.attributes.#{resource.class.to_s.downcase}.email") %>
          <span class="badge bg-danger">必須</span>
        <% end %>
        <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
        <%= render "shared/error_messages_for_attribute", object: resource, attribute: :email %>
      </div>
    </div>
    <div class="row">
      <div class="col-6">
        <%= f.submit t('.send_me_reset_password_instructions'), class: "btn btn-primary w-100" %>
      </div>
      <div class="col-6">
        <%= link_to "キャンセル", 'javascript:history.back()', class: "btn btn-outline-secondary w-100" %>
      </div>
    </div>
  <% end %>
</div>
