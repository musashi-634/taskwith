<div class="container">
  <h1 class="my-5">
    <%= t('.change_your_password') %>
  </h1>
  <p><%= render "shared/error_messages_for_attribute", object: resource, attribute: :reset_password_token %></p>
  <%= form_with model: resource, url: password_path(resource_name), method: :patch, class: "pb-5" do |f| %>
    <%= f.hidden_field :reset_password_token %>
    <div class="row g-3 mb-4">
      <div class="col-12">
        <%= f.label :password, class: "form-label" do %>
          <%= t('.new_password') %>
          <span class="badge bg-danger">必須</span>
          <% if @minimum_password_length %>
            <br>
            <em class="text-secondary">
              <%= t('users.shared.minimum_password_length', count: @minimum_password_length) %>
            </em>
          <% end %>
        <% end %>
        <%= f.password_field :password, class: "form-control", autofocus: true, autocomplete: "new-password" %>
        <%= render "shared/error_messages_for_attribute", object: resource, attribute: :password %>
      </div>
      <div class="col-12">
        <%= f.label :password_confirmation, class: "form-label" do %>
          <%= t('.confirm_new_password') %>
          <span class="badge bg-danger">必須</span>
        <% end %>
        <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %>
        <%= render "shared/error_messages_for_attribute", object: resource, attribute: :password_confirmation %>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <%= f.submit t('.change_my_password'), class: "btn btn-primary w-100" %>
      </div>
    </div>
  <% end %>
</div>
